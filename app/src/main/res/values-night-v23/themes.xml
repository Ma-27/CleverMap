<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.CleverMap" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0000FF</item>
        <item name="colorPrimaryVariant">#FFEA00</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00FF00</item>
        <item name="colorSecondaryVariant">#F57F17</item>
        <item name="colorOnSecondary">#1B5E20</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/statusBar</item>

        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CleverMap.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>
</resources>
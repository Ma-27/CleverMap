<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_night_table_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/cardview_default_elevation"
        android:onClick="setMapType">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/photo_night_tableView_item"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:contentDescription="按下图片来把地图切换为夜间模式"
                android:scaleType="centerInside"
                android:src="@drawable/image_night_mode" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="12dp" />

            <TextView
                android:id="@+id/textView_default_table_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="夜间地图"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</TableLayout>